export interface Props {
  title: string;
  description: string;
  preconnectDomains?: string[];
  siteName?: string;
  siteUrl?: string; // Add siteUrl to props if it's not always 'url'
  keywords?: string; // New: Add keywords prop for meta keywords
}
const url = import.meta.env.PUBLIC_SITE_URL;
const nama = import.meta.env.PUBLIC_SITE_NAME;
const desk = import.meta.env.PUBLIC_SITE_DESCRIPTION;
const google = import.meta.env.PUBLIC_GOOGLE_SITE_VERIFICATION;
const yandex = import.meta.env.PUBLIC_YANDEX_SITE_VERIFICATION;

const {
  title,
  description,
  preconnectDomains = [],
  siteName = nama,
  siteUrl = url, // Ensure siteUrl is correctly set from props or default
  keywords, // Destructure keywords
} = Astro.props;

const currentUrl = Astro.url.href; // Use Astro.url.href for the current page's canonical URL
const siteDescription = desk;

// Ensure ogImageFullUrl is absolute and robust
const ogImageFullUrl = new URL(`/logo.png`, siteUrl).href;

// --- SEO: Schema.org JSON-LD ---

const websiteSchema = {
  "@context": "https://schema.org", // Use HTTPS for schema.org
  "@type": "WebSite",
  "name": siteName,
  "url": siteUrl,
  "description": siteDescription,
  "potentialAction": {
    "@type": "SearchAction",
    "target": {
      "@type": "EntryPoint",
      "urlTemplate": `${siteUrl}/video/{search_term_string}/1` // Updated target for search action
    },
    "query-input": "required name=search_term_string"
  }
};

const organizationSchema = {
  "@context": "https://schema.org", // Use HTTPS for schema.org
  "@type": "Organization",
  "name": siteName,
  "url": siteUrl,
  "logo": `${siteUrl}/logo.png`,
  "description": siteDescription,
  "sameAs": [] // You can add social media links here, e.g., ["https://facebook.com/yourpage"]
};

// Combine all schemas passed from individual pages with global ones
let pageJsonLdSchemas = [];
if (Astro.props.jsonLdSchemas) { // Check if jsonLdSchemas is passed from a page
  pageJsonLdSchemas = Astro.props.jsonLdSchemas;
}

const finalJsonLdSchemas = [
  ...jsonLdSchemas, // Existing global schemas (website, organization)
  ...pageJsonLdSchemas // Schemas from the specific page
];

